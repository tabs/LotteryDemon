<UserControl x:Class="预彩精灵.Pages.Settings.Help"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="CommonTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        </Style>
        <Style x:Key="CommonHeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="软件帮助" Style="{StaticResource  CommonHeaderTextBlockStyle}" />
                <TextBlock Text="帮助内容" Style="{StaticResource CommonTextBlockStyle}"  />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
